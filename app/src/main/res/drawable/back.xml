<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" android:shape="rectangle">
    <shape>
        <solid android:color="#c4c3c3" />
        <stroke android:width="1dip" android:color="#c9c9c9"/>
        <padding
            android:left="1dp"
            android:right="1dp"
            android:top="1dp" />
        <corners android:radius="5dp" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <solid android:color="#ffffff" />
        <stroke android:width="1dip" android:color="#c9c9c9"/>
        <padding
            android:left="1dp"
            android:right="1dp"
            android:top="1dp" />
        <corners android:radius="5dp" />
    </shape>
</item>


</selector>
