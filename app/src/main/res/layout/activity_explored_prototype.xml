<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context="com.tananut.travelmateapp.ExploredPrototypeActivity">


        <GridLayout
            android:id="@+id/grid"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:rowCount="10"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <GridLayout
                android:id="@+id/grid_topic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#3dcbf2"
                android:columnCount="2"
                android:layout_row="0">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"

                    android:layout_row="0"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    app:srcCompat="@drawable/left_chevron" />

                <ImageView
                    android:id="@+id/topicText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginLeft="298dp"
                    android:layout_row="0"
                    android:foregroundGravity="right"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    app:srcCompat="@drawable/edit_2" />

                <TextView
                    android:id="@+id/topic"
                    android:layout_width="238dp"
                    android:layout_height="28dp"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_row="0"
                    android:gravity="center"
                    android:text="Test Travel"
                    android:textColor="#114453"
                    android:textSize="22dp" />

            </GridLayout>

            <ImageView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_row="1"
                android:background="@drawable/back_edge"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                app:srcCompat="@android:drawable/ic_delete" />

            <ImageView
                android:id="@+id/iconMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_marginLeft="54dp"
                android:layout_marginBottom="34dp"
                android:layout_gravity="bottom|left"

                app:srcCompat="@drawable/googlemap" />

            <TextView
                android:id="@+id/descText"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_row="2"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:textColor="#837a7a" />

            <ImageView
                android:id="@+id/shared_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle"
                android:paddingRight="13dp"
                android:paddingLeft="8dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:layout_row="3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="15dp"
                android:src="@drawable/sharethis" />

            <TextView
                android:id="@+id/time"
                android:layout_width="238dp"
                android:layout_height="28dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_row="3"
                android:gravity="center"
                android:text="2017-12-31 17:30:00"
                android:textColor="#114453"
                android:textSize="24dp" />

            <GridLayout
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_row="4"
                android:background="#ffffff">

            </GridLayout>

        </GridLayout>
</android.support.constraint.ConstraintLayout>
