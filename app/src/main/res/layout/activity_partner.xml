<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.tananut.travelmateapp.PartnerActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="10"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <GridLayout
            android:id="@+id/grid_topic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3dcbf2"
            android:columnCount="2"
            android:layout_row="0">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/left_chevron" />

            <TextView
                android:id="@+id/topic"
                android:layout_width="238dp"
                android:layout_height="28dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="3dp"
                android:layout_row="0"
                android:gravity="center"
                android:text="Partners"
                android:textColor="#114453"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:layout_row="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/add" />


        </GridLayout>

        <GridLayout
            android:id="@+id/grid1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/back_edge">

            <ImageView
                android:id="@+id/partner_pic1"
                android:layout_width="45dp"
                android:layout_height="43dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="left|center"
                android:layout_row="0"
                android:layout_column=  "0"
                app:srcCompat="@drawable/black_user" />

            <TextView
                android:id="@+id/partner_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:textSize="23dp"
                android:text="Empty" />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:clickable="false"
            android:background="@drawable/back_edge">

            <ImageView
                android:id="@+id/partner_pic2"
                android:layout_width="45dp"
                android:layout_height="43dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="left|center"
                android:layout_row="0"
                android:layout_column=  "0"
                app:srcCompat="@drawable/black_user" />

            <TextView
                android:id="@+id/partner_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:textSize="23dp"
                android:text="Empty" />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:clickable="false"
            android:background="@drawable/back_edge">

            <ImageView
                android:id="@+id/partner_pic3"
                android:layout_width="45dp"
                android:layout_height="43dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="left|center"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/black_user" />

            <TextView
                android:id="@+id/partner_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:textSize="23dp"
                android:text="Empty" />
        </GridLayout>

        <GridLayout
            android:id="@+id/grid4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="0"
            android:clickable="false"
            android:background="@drawable/back_edge">

            <ImageView
                android:id="@+id/partner_pic4"
                android:layout_width="45dp"
                android:layout_height="43dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="left|center"
                android:layout_row="0"
                android:layout_column=  "0"
                app:srcCompat="@drawable/black_user" />

            <TextView
                android:id="@+id/partner_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:textSize="23dp"
                android:text="Empty" />
        </GridLayout>

        <GridLayout
            android:id="@+id/grid5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="0"
            android:clickable="false"
            android:background="@drawable/back_edge">

            <ImageView
                android:id="@+id/partner_pic5"
                android:layout_width="45dp"
                android:layout_height="43dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="left|center"
                android:layout_row="0"
                android:layout_column=  "0"
                app:srcCompat="@drawable/black_user" />

            <TextView
                android:id="@+id/partner_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="left|center"
                android:layout_marginLeft="20dp"
                android:textSize="23dp"
                android:text="Empty" />
        </GridLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
