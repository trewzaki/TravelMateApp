<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.tananut.travelmateapp.SecurityActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="10"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <GridLayout
            android:id="@+id/grid_topic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3dcbf2"
            android:columnCount="2"
            android:layout_row="0">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"

                android:layout_row="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/left_chevron" />

            <TextView
                android:id="@+id/topic"
                android:layout_width="238dp"
                android:layout_height="28dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="15dp"
                android:layout_row="0"
                android:gravity="center"
                android:text="Setting"
                android:textColor="#114453"
                android:textSize="22dp" />

        </GridLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="Idle Time (mins)" />

        <GridLayout
            android:layout_width="330dp"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#000000">

        </GridLayout>

        <TextView
            android:id="@+id/idle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="xx" />

        <ImageView
            android:id="@+id/edit_idle_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/edit" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="Safe Confirmation Time (mins)" />

        <GridLayout
            android:layout_width="330dp"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_row="5"
            android:layout_column="0"
            android:background="#000000">

        </GridLayout>

        <TextView
            android:id="@+id/safe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="20dp"
            android:text="x" />

        <ImageView
            android:id="@+id/edit_safe_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/edit" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
