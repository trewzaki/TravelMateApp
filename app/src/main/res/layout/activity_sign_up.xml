<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.tananut.travelmateapp.SignUpActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="10"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <GridLayout
            android:id="@+id/grid_topic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3dcbf2"
            android:columnCount="2"
            android:layout_row="0">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"

                android:layout_row="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/left_chevron" />

            <ImageView
                android:id="@+id/topicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_marginLeft="298dp"
                android:layout_row="0"
                android:visibility="invisible"
                android:foregroundGravity="right"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/edit_2" />

            <TextView
                android:id="@+id/topic"
                android:layout_width="238dp"
                android:layout_height="28dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_row="0"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="#114453"
                android:textSize="22dp" />

        </GridLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
