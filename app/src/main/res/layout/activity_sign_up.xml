<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.tananut.travelmateapp.SignUpActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="20"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <GridLayout
            android:id="@+id/grid_topic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3dcbf2"
            android:columnCount="2"
            android:layout_row="0">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"

                android:layout_row="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/left_chevron" />

            <ImageView
                android:id="@+id/topicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_marginLeft="298dp"
                android:layout_row="0"
                android:visibility="invisible"
                android:foregroundGravity="right"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/edit_2" />

            <TextView
                android:id="@+id/topic"
                android:layout_width="238dp"
                android:layout_height="28dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_row="0"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="#114453"
                android:textSize="22dp" />

        </GridLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_row="1"
                    android:text="Email"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/email_edit"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_row="2"
                    android:ems="15"
                    android:inputType="textEmailAddress"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="3"
                    android:text="Password"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/password_edit"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_row="4"
                    android:ems="15"
                    android:inputType="textPassword"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Text"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="5"
                    android:text="Confirm Password"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/confirmPassword_edit"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_row="6"
                    android:ems="15"
                    android:inputType="textPassword"
                    android:text=""
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="7"
                    android:text="First name"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/firstName_edit"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_row="8"
                    android:ems="15"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="9"
                    android:text="Last name"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/lastName_edit"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_row="10"
                    android:ems="15"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_row="11"
                    android:background="#2f9ee7"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

            </LinearLayout>
        </ScrollView>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
